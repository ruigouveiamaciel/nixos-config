{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin-macchiato",
  "autoupdate": false,
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "pwd": "allow",
      "git status *": "allow", 
      "git status": "allow", 
      "git fetch *": "allow",
      "git fetch": "allow",
      "git log *": "allow",
      "git log": "allow",
      "git diff *": "allow",
      "git diff": "allow",
      "git add *": "allow",
      "git commit *": "allow"
    },
    "webfetch": "ask"
  },
  "keybinds": {
    "input_submit": "alt+enter"
  }
}
