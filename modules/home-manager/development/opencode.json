{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": false,
  "instructions": ["~/.config/opencode/INSTRUCTIONS.md"],
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "pwd": "allow",
      "git status *": "allow", 
      "git status": "allow", 
      "git fetch *": "allow",
      "git fetch": "allow",
      "git log *": "allow",
      "git log": "allow",
      "git diff *": "allow",
      "git diff": "allow",
      "git add *": "allow",
      "git commit *": "allow"
    },
    "webfetch": "ask"
  },
  "keybinds": {
    "input_submit": "alt+enter"
  },
  "mcp": {
    "atlassian": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.atlassian.com/v1/sse"]
    },
    "gitlab": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://gitlab.com/api/v4/mcp"]
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  }
}
